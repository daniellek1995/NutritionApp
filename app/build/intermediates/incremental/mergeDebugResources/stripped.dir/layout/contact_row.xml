<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contactRowLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/tvContactFullName"
                android:text="Full Name"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/tvContactEmail"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Email" />
            <TextView
                android:id="@+id/tvContactPhone"
                android:text="Phone"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutContactControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnContactChat"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:minHeight="0dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="צ'אט" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="שולם?" />

        <CheckBox
            android:id="@+id/chkboxContactPaid"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="" />

        <Button
            android:id="@+id/btnContactProgress"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:minHeight="0dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="התקדמות" />

    </LinearLayout>
</LinearLayout>